case $BLOCK_BUTTON in
	1) notify-send "<b>CPU hogs</b>:
$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
	3) notify-send "<b>ðŸ–¥ CPU module:</b>
- Shows CPU temperature.
- Click to show intensive processes.
- % is of single core." ;;
esac

source colors

CPU_TEMP=$(sensors | awk '/^Package id 0:/ {print $4}' | sed 's/^.//' | cut -d \. -f1)
if [ "${CPU_TEMP}" -lt 15 ]; then
    LABEL="ï‹‹ "; COLOR="#FFFFFF"
elif [ "${CPU_TEMP}" -lt 30 ]; then
    LABEL="ï‹Š "; COLOR="#00FF00"
elif [ "${CPU_TEMP}" -lt 60 ]; then
    LABEL="ï‹‰ "; COLOR="#FFEF00"
elif [ "${CPU_TEMP}" -lt 80 ]; then
    LABEL="ï‹ˆ "; COLOR="#FF8000"
else
    LABEL="ï‹‡ "; COLOR="#FF0000"
fi

echo -n "${LABEL}"
colorizeBegin ${COLOR}
echo -n "${CPU_TEMP}Â°C"
colorizeEnd

